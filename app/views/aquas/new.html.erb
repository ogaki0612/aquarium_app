<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規アクアリウム投稿</h2>
      <%= form_with model: @aqua, local: true do |f|%>
        <div class="field">
          <%= f.label :title, "タイトル" %><br />
          <%= f.text_field :title, id:"prototype_title" %>
        </div>

        <div class= "category">
          <%= f.label :category, "タイプ" %><br />
          <%= f.collection_select(:category_id, Category.all, :id, :name, {},{class:"category_select"}) %>
        </div>

        <div class="field">
          <%= f.label :details, "詳細" %><br />
          <%= f.text_area :details, class: :form__text, id:"prototype_catch_copy" %>
        </div>

        <div class="field">
          <%= f.label :image, "プロトタイプの画像" %><br />
          <%= f.file_field :image, id:"prototype_image" %>
        </div>

        <div class="actions">
          <%= f.submit "保存する", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>